<%- include('partials/header') %>

<main class="container py-5">
    <div class="row m-0">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>     
                        <% for (let i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].address %></td>
                                <td><%= data[i].phone %></td>
                                <td>
                                    <div class="d-flex">
                                        <a href="/update/<%= data[i].id %>" class="btn btn-sm btn-warning">Edit</a>
                                        <a href="/delete/<%= data[i].id %>" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="col-md-5">
            <form action="/add" method="POST" class="card">
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name">
                    </div>
                    <div class="form-group my-3">
                        <input type="text" class="form-control" name="address" placeholder="Address">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="phone" placeholder="Phone">
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Save Customer</button>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include ('partials/footer') %>